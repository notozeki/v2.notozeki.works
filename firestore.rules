service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    match /admins/{uid} {
      allow read: if isAdmin() && request.auth.uid == uid;
    }
    match /posts/{post} {
      allow write: if isAdmin();
    }

    match /users/{user} {
      allow read;
    }
    match /posts/{post} {
      allow read;
    }
  }
}

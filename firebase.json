{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "dist/functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm run firebase:build"
    ]
  },
  "hosting": {
    "public": "dist/hosting",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "nuxt"
      }
    ],
    "predeploy": [
      "npm run firebase:build"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
